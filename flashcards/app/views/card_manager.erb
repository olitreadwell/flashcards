<h1>Card Manager</h1>

  <h2>Current Cards in Deck:</h2>
    <table>
      <tr>
        <th>Question</th>
        <th>Answer</th>
      </tr>
        <% @cards.each do |card| %>
          <tr>
            <td><%= card.question %></td>
            <td><%= card.answer %></td>
          </tr>
        <% end %>
    </table>

  <form method="post" action="/card_manager/<%= @deck.id %>">
    <input type="text" name="question">
    <input type="text" name="answer">
    <input type="submit" value="Add Card to Deck!">
  </form>
